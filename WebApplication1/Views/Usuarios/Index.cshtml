@model IEnumerable<WebApplication1.Models.Usuarios>
@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Usuarios</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Usuarios">Agregar</a>
        </div>
    </div>
</div>

<div class="container m-3">
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.Id)</td>
                    <td>@Html.DisplayNameFor(a => a.Nombre)</td>
                    <td>@Html.DisplayNameFor(a => a.Direccion)</td>
                    <td>@Html.DisplayNameFor(a => a.NumeroTelefono)</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Direccion</td>
                        <td>@item.NumeroTelefono</td>
                        <td>
                            <a asp-controller="Usuarios" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-controller="Usuarios" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
