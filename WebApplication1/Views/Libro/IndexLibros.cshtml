@model IEnumerable<WebApplication1.Models.Libros>
@{
    ViewData["Title"] = "IndexLibros";
}

<h1>Lista de libros</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="CreateLibro" asp-controller="Libro">Agregar</a>
        </div>
    </div>
</div>

<div class="container m-3">
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.Id)</td>
                    <td>@Html.DisplayNameFor(a => a.Titulo)</td>
                    <td>@Html.DisplayNameFor(a => a.Autor)</td>
                    <td>@Html.DisplayNameFor(a => a.Genero)</td>
                    <td>@Html.DisplayNameFor(a => a.AnoPublicacion)</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Titulo</td>
                        <td>@item.Autor</td>
                        <td>@item.Genero</td>
                        <td>@item.AnoPublicacion</td>
                        <td>
                            <a asp-controller="Libro" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-controller="Libro" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
