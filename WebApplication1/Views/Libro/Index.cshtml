@model IEnumerable<WebApplication1.Models.Libros>
@{
    ViewData["Title"] = "Index";
}

<h1>Lista de libros</h1>

<div class="container">

<div class="row">
    <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Libro">Agregar</a>
    </div>
</div>
</div>

<div class="container m-3">
<div class="row">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(a => a.Id)</td>
                <td>@Html.DisplayNameFor(a => a.Titulo)</td>
                <td>@Html.DisplayNameFor(a => a.Descripcion)</td>
                <td>@Html.DisplayNameFor(a => a.libros)</td>
                <td>@Html.DisplayNameFor(a => a.precio)</td>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Titulo</td>
                        <td>@item.Descripcion</td>
                        <td>@item.libros</td>
                        <td>@item.precio</td>
                        <td>
                            <a asp-controller="Libro" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-controller="Libro" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>

                    </tr>
                }
        </tbody>
    </table>
</div>
</div>
